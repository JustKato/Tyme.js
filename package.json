{
  "name": "tymejs",
  "version": "0.4.5",
  "description": "Quickly and easily format JavaScript date Objects",
  "main":  "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build":    "tsc",
    "buildweb": "esbuild src/index.ts --bundle --minify --sourcemap --target=chrome58,firefox57,safari11,edge16 --outfile=dist/tyme.js",
    "test":     "jest --config jestconfig.json"
  },
  "keywords": [
    "time",
    "time format",
    "date",
    "date format",
    "datetime",
    "datetime format",
    "format"
  ],
  "author": "Kato Twofold",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/JustKato/Tyme.js"
  },
  "devDependencies": {
    "@types/jest": "^27.5.0",
    "jest": "^28.1.0",
    "ts-jest": "^28.0.1",
    "typescript": "^4.6.4",
    "ts-node": "^10.7.0"
  },
  "files": [
    "lib/**/*"
  ]
}
